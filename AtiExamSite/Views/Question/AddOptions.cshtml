@{
    ViewData["Title"] = "Add Options to Question";
    var options = ViewBag.AvailableOptions as IEnumerable<dynamic>;
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Add Options to Question</h2>
            @if (ViewBag.QuestionTitle != null)
            {
                <h4 class="mb-0">@ViewBag.QuestionTitle</h4>
            }
        </div>
        <div class="card-body">
            @* Feedback *@
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if (TempData["WarningMessage"] != null)
            {
                <div class="alert alert-warning">@TempData["WarningMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="AddOptions" method="post" id="optionsForm">
                <input type="hidden" name="questionId" value="@ViewBag.QuestionId" />

                <div class="row mb-3">
                    <div class="col-md-8">
                        <div class="input-group">
                            <input type="text" id="optionSearch" class="form-control" placeholder="Search options..." aria-label="Search options" />
                            <button class="btn btn-outline-secondary" type="button" id="clearOptionSearch" aria-label="Clear search">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="selectAllOptions" />
                            <label class="form-check-label fw-bold" for="selectAllOptions">
                                Select/Deselect All
                            </label>
                        </div>
                    </div>
                </div>

                @if (options != null && options.Any())
                {
                    <div class="options-container" style="max-height:500px; overflow-y:auto;">
                        @foreach (var option in options)
                        {
                            <div class="card mb-2 option-card" data-title="@(option.Title.ToString().ToLower())">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-1 text-center">
                                            <input class="form-check-input option-checkbox" type="checkbox"
                                                   name="optionIds" value="@option.Id" id="option_@option.Id" />
                                        </div>
                                        <div class="col-md-11">
                                            <label class="form-check-label option-text fw-bold" for="option_@option.Id">
                                                @option.Title
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">No available options to add.</div>
                }

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Details" asp-route-id="@ViewBag.QuestionId" class="btn btn-outline-secondary me-md-2">
                        <i class="fas fa-arrow-left me-1"></i> Back to Question
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i> Add Selected Options
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Select/Deselect all
            $('#selectAllOptions').on('change', function () {
                $('.option-checkbox').prop('checked', $(this).prop('checked'));
            });

            // Keep master checkbox in sync
            $('.options-container').on('change', '.option-checkbox', function () {
                const all = $('.option-checkbox');
                const checked = all.filter(':checked');
                $('#selectAllOptions').prop('checked', all.length === checked.length);
            });

            // Search filter
            $('#optionSearch').on('input', function () {
                const searchText = $(this).val().toLowerCase();
                $('.option-card').each(function () {
                    const title = $(this).data('title') || '';
                    $(this).toggle(title.includes(searchText));
                });
            });

            // Clear search
            $('#clearOptionSearch').on('click', function () {
                $('#optionSearch').val('').trigger('input');
            });
        });
    </script>
}
