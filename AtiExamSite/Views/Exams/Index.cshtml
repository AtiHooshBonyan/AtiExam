@model IEnumerable<Exam>
@{
    ViewData["Title"] = "Exams";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Exams</h1>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Questions</th>
                <th>Passing Score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.QuestionsToShow</td>
                    <td>@item.PassingScore</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.ExamId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.ExamId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ExamId" class="btn btn-danger btn-sm">Delete</a>
                            <a asp-controller="Questions" asp-action="Index" asp-route-examId="@item.ExamId"
                               class="btn btn-secondary btn-sm">View Questions</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>