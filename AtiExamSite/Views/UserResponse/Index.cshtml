@model IEnumerable<AtiExamSite.Models.DomainModels.Exam>

@{
    // Safely cast UserResults from ViewBag or create empty dictionary
    var userResults = ViewBag.UserResults as Dictionary<Guid, (int Score, bool Passed)>
                      ?? new Dictionary<Guid, (int Score, bool Passed)>();
}

<div class="container py-4">
    <h1 class="mb-4">My Exam Results</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            You haven't taken any exams yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" aria-describedby="examResultsCaption">
                <caption id="examResultsCaption" class="visually-hidden">List of exams and your results</caption>
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Exam</th>
                        <th scope="col">Score</th>
                        <th scope="col">Passing Score</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var exam in Model)
                    {
                        if (userResults.TryGetValue(exam.Id, out var result))
                        {
                            <tr>
                                <td>@exam.Title</td>
                                <td>@result.Score</td>
                                <td>@exam.PassingScore</td>
                                <td>
                                    @if (result.Passed)
                                    {
                                        <span class="badge bg-success" aria-label="Passed status">Passed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger" aria-label="Failed status">Failed</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-examId="@exam.Id"
                                       class="btn btn-sm btn-info"
                                       title="View details for @exam.Title"
                                       aria-label="View details for @exam.Title">
                                        <i class="fas fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a asp-action="Create" asp-route-examId="@exam.Id"
                                       class="btn btn-sm btn-primary ms-2"
                                       title="Take exam: @exam.Title"
                                       aria-label="Take exam: @exam.Title">
                                        <i class="fas fa-pencil-alt" aria-hidden="true"></i> Take Exam
                                    </a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@exam.Title</td>
                                <td colspan="4" class="text-center text-muted fst-italic">
                                    No results available
                                    <a asp-action="Create" asp-route-examId="@exam.Id"
                                       class="btn btn-sm btn-primary ms-2"
                                       title="Take exam: @exam.Title"
                                       aria-label="Take exam: @exam.Title">
                                        <i class="fas fa-pencil-alt" aria-hidden="true"></i> Take Exam
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>
