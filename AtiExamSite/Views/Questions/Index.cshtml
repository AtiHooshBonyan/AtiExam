@model IEnumerable<Question>
@{
    ViewData["Title"] = "Questions";
    var examId = Context.Request.Query["examId"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Questions</h1>
    <div>
        @if (!string.IsNullOrEmpty(examId))
        {
            <a asp-action="Create" asp-route-examId="@examId" class="btn btn-success me-2">Add Question</a>
            <a asp-controller="Exams" asp-action="Details" asp-route-id="@examId" class="btn btn-secondary">Back to Exam</a>
        }
        else
        {
            <a asp-action="Create" class="btn btn-success">Create New</a>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Question Text</th>
                <th>Exam</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Text</td>
                    <td>
                        <a asp-controller="Exams" asp-action="Details" asp-route-id="@item.ExamId">
                            @item.Exam?.Title
                        </a>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.QuestionId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-danger btn-sm">Delete</a>
                            <a asp-controller="AnswerOptions" asp-action="DetailsByQuestion" asp-route-questionId="@item.QuestionId"
                               class="btn btn-secondary btn-sm">View Answers</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>