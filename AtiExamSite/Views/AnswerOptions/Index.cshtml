@model IEnumerable<AnswerOption>
<h1>Answer Options</h1>
<table class="table">
    <thead>
        <tr>
            <th>Text</th>
            <th>Is Correct</th>
            <th>Question</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Text</td>
                <td>@item.IsCorrect</td>
                <td>@item.QuestionId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AnswerId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.AnswerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AnswerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Create New</a>