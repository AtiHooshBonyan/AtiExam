@model IEnumerable<AnswerOption>
@{
    ViewData["Title"] = "Answer Options";
    var question = ViewBag.Question as Question;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Answer Options</h1>
        <h4>For Question: @question?.Text</h4>
    </div>
    <div>
        <a asp-action="Create" asp-route-questionId="@question.QuestionId" class="btn btn-success me-2">Add Answer</a>
        <a asp-controller="Questions" asp-action="Details" asp-route-id="@question.QuestionId" class="btn btn-secondary">Back to Question</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Answer Text</th>
                <th>Is Correct</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsCorrect ? "table-success" : "")">
                    <td>@item.Text</td>
                    <td>
                        @if (item.IsCorrect)
                        {
                            <span class="badge bg-success">Correct</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Incorrect</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.AnswerId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.AnswerId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.AnswerId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>