@model AtiExamSite.Models.DomainModels.Exam

@{
    ViewData["Title"] = "Delete Exam";
}

<div class="container">
    <h1>Delete Exam</h1>
    <h3 class="text-danger">Are you sure you want to delete this exam?</h3>
    <hr />

    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h4>@Model.Title</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Time Limit</dt>
                <dd class="col-sm-9">@(Model.TimeLimitMinutes?.ToString() ?? "N/A") minutes</dd>

                <dt class="col-sm-3">Questions</dt>
                <dd class="col-sm-9">@Model.QuestionCount</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
            </dl>

            @if (Model.ExamQuestions?.Any() == true)
            {
                <div class="alert alert-warning">
                    <strong>Warning!</strong> This exam contains @Model.ExamQuestions.Count questions that will also be removed.
                </div>
            }

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>