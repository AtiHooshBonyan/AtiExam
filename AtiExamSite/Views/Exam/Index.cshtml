@using AtiExamSite.Models.DomainModels.Exam
@model IEnumerable<Exam>

@{
    ViewData["Title"] = "Exams";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Exams</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Create New
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search Box -->
    <div class="mb-3">
        <input type="text" id="examSearch" class="form-control" placeholder="Search exams..." aria-label="Search exams" />
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" id="examsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Time Limit</th>
                            <th>Questions</th>
                            <th>Status</th>
                            <th style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var exam in Model)
                            {
                                <tr>
                                    <td class="exam-title">@exam.Title</td>
                                    <td title="@exam.Description">
                                        @(string.IsNullOrEmpty(exam.Description)
                                                                        ? "-"
                                                                        : exam.Description.Length > 50
                                                                        ? exam.Description.Substring(0, 50) + "..."
                                                                        : exam.Description)
                            </td>
                            <td>@(exam.TimeLimitMinutes.HasValue ? $"{exam.TimeLimitMinutes} min" : "N/A")</td>
                            <td>@exam.QuestionCount</td>
                            <td>
                                <span class="badge @(exam.IsActive ? "bg-success" : "bg-secondary")">
                                    @(exam.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Exam actions">
                                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-sm btn-warning" title="Edit Exam">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-sm btn-danger" title="Delete Exam" onclick="return confirm('Are you sure you want to delete this exam?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <a asp-action="AddQuestions" asp-route-examId="@exam.Id" class="btn btn-sm btn-primary" title="Add Questions">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                                                }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No exams available.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#examSearch').on('input', function () {
                var searchText = $(this).val().toLowerCase();

                $('#examsTable tbody tr').each(function () {
                    var title = $(this).find('.exam-title').text().toLowerCase();
                    $(this).toggle(title.includes(searchText));
                });
            });
        });
    </script>
}
