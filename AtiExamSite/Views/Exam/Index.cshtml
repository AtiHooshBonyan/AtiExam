@model IEnumerable<AtiExamSite.Models.DomainModels.Exam>

@{
    ViewData["Title"] = "Exams";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Exams</h1>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Time Limit</th>
                            <th>Questions</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td>@exam.Title</td>
                                <td>@(exam.Description?.Length > 50 ? exam.Description.Substring(0, 50) + "..." : exam.Description)</td>
                                <td>@(exam.TimeLimitMinutes?.ToString() ?? "N/A") min</td>
                                <td>@exam.QuestionCount</td>
                                <td>
                                    <span class="badge @(exam.IsActive ? "bg-success" : "bg-secondary")">
                                        @(exam.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-sm btn-danger">Delete</a>
                                        <a asp-action="AddQuestions" asp-route-examId="@exam.Id" class="btn btn-sm btn-primary">Add Qs</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>