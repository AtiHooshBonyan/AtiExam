@model AtiExamSite.Models.DomainModels.Option

@{
    ViewData["Title"] = "Option Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Option Details</h1>
        <span class="badge @(Model.IsCorrect ? "bg-success" : "bg-secondary")">
            @(Model.IsCorrect ? "Correct Answer" : "Incorrect Answer")
        </span>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Option Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>