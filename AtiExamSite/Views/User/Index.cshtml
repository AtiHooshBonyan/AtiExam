@model IEnumerable<AtiExamSite.Models.DomainModels.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <h1>Users</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New User</a>

    @if (!Model?.Any() ?? true)
    {
        <div class="alert alert-info">No users found.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Active</th>
                    <th>Admin</th>
                    <th>Created At (UTC)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>@(user.IsActive ? "Yes" : "No")</td>
                        <td>@(user.IsAdmin ? "Yes" : "No")</td>
                        <td>@user.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
