@model AtiExamSite.Models.DomainModels.User

@{
    ViewData["Title"] = $"Delete User - {Model.Username}";
}

<div class="container">
    <h1>Delete User</h1>
    <h3 class="text-danger">Are you sure you want to delete this user?</h3>

    <dl class="row">
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">@Model.IsActive</dd>

        <dt class="col-sm-3">Admin</dt>
        <dd class="col-sm-9">@Model.IsAdmin</dd>

        <dt class="col-sm-3">Created At (UTC)</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
